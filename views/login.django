<form id="content" method="POST" class="m-6">
    <input class="p-2 border mb-3" type="email" name="email" placeholder="Email">
    <input class="p-2 border block mb-3"  type="password" name="password" placeholder="Password">
    <button class="p-2 bg-blue-600 text-white hover:bg-blue-500 duration-100" type="submit">Login</button>

    <div class="mt-3 text-red-600" id="error">{{error}}</div>
</form>
